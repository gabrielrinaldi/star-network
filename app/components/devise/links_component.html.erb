<%- if @devise_mapping.registerable? && controller != 'registrations' && controller != 'sessions' %>
  <div>
    <%= link_to 'Sign up to an account', new_registration_path('user'),
                class: 'text-sm font-medium text-gray-500 group-hover:text-gray-900' %>
  </div>
<% end %>
<%- if @devise_mapping.recoverable? && controller != 'passwords' && controller != 'registrations' && controller != 'sessions' %>
  <div>
    <%= link_to 'Forgot your password?', new_password_path('user'),
                class: 'text-sm font-medium text-gray-500 group-hover:text-gray-900' %>
  </div>
<% end %>
<%- if @devise_mapping.confirmable? && controller != 'confirmations' %>
  <div>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path('user'),
                class: 'text-sm font-medium text-gray-500 group-hover:text-gray-900' %>
  </div>
<% end %>
<%- if @devise_mapping.lockable? && User.unlock_strategy_enabled?(:email) && controller != 'unlocks' %>
  <div>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path('user'),
                class: 'text-sm font-medium text-gray-500 group-hover:text-gray-900' %>
  </div>
<% end %>
