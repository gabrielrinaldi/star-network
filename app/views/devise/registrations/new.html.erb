<%= render(Devise::HeaderComponent.new(title: 'Sign up for an account',
                                       link_title: 'Sign in to your account',
                                       link_path: new_session_path(resource_name))) %>

<%= render(Devise::FrameComponent.new(devise_mapping:, flash:)) do %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="space-y-6">
      <%= f.input :email, required: true, autofocus: true, autocomplete: :email %>
      <%= f.input :username, required: true, hint: 'Must match your Star Citizen account' %>
      <%= f.input :password, required: true,
                             hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                             autocomplete: 'new-password' %>
      <%= f.input :password_confirmation, required: true, autocomplete: 'new-password' %>

      <%= f.button :submit, 'Sign up', class: 'flex w-full' %>
    </div>
  <% end %>
<% end %>
